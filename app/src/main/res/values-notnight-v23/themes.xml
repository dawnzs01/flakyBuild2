<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Override application light theme on API 23+ (because on lower versions light status bar is
    not supported) to set status bar color to transparent -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- Set status bar transparent and light -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>