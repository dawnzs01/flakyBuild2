<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/l_125"
    app:contentPaddingLeft="@dimen/l_75"
    app:contentPaddingRight="@dimen/l_75">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/switch_card_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginVertical="@dimen/l_50"
            android:layout_marginEnd="@dimen/l_50"
            android:layout_toStartOf="@id/switch_card_switch"
            android:labelFor="@id/switch_card_switch"
            android:textAlignment="viewStart"
            tools:ignore="LabelFor" />

        <com.jacopomii.gappsmod.ui.view.ProgrammaticMaterialSwitchView
            android:id="@+id/switch_card_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:saveEnabled="false" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>