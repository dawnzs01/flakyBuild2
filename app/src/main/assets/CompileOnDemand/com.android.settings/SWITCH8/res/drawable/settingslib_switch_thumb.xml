<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:bottom="8dp"
                android:end="8dp"
                android:top="8dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="0.0"
                        android:endColor="@*android:color/holo_green_light"
                        android:startColor="@*android:color/holo_blue_light" />
                    <corners android:radius="12dp" />
                    <size
                        android:width="12dp"
                        android:height="12dp" />
                </shape>
            </item>
            <item
                android:bottom="11dp"
                android:start="3dp"
                android:end="11dp"
                android:top="11dp">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorBackground" />
                    <corners android:radius="8dp" />
                    <size
                        android:width="8dp"
                        android:height="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item
                android:bottom="8dp"
                android:start="8dp"
                android:top="8dp">
                <shape
                    android:shape="rectangle"
                    android:tint="?android:colorForeground">
                    <solid android:color="#66ffffff" />
                    <corners android:radius="12dp" />
                    <size
                        android:width="12dp"
                        android:height="12dp" />
                </shape>
            </item>
            <item
                android:bottom="11dp"
                android:start="11dp"
                android:end="3dp"
                android:top="11dp">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorBackground" />
                    <corners android:radius="8dp" />
                    <size
                        android:width="8dp"
                        android:height="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
